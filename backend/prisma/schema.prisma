generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                String        @id @default(uuid())
  name              String
  description       String?       @db.Text
  status            String        @default("active") // active, completed, archived
  fileCount         Int           @default(0)
  totalRecords      Int           @default(0)
  combinedDomain    String?       // Detected domain across all files
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  uploads           Upload[]
  cleaningJobs      CleaningJob[]
  domainJobs        DomainDetectionJob[]
  kpiJobs           KpiExtractionJob[]

  @@map("projects")
}

model Upload {
  id                String        @id @default(uuid())
  projectId         String
  project           Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fileName          String
  originalName      String
  fileType          String
  fileSize          BigInt
  filePath          String
  status            String        @default("queued") // queued, processing, completed, failed
  recordsProcessed  Int           @default(0)
  totalRecords      Int           @default(0)
  tableName         String?
  errorMessage      String?       @db.Text
  metadata          Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  completedAt       DateTime?
  dataRows          DataRow[]
  cleaningJobs      CleaningJob[]

  @@index([projectId])
  @@map("uploads")
}

model DataRow {
  id        String   @id @default(uuid())
  uploadId  String
  upload    Upload   @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  rowNumber Int
  data      Json     // Stores the actual row data as JSON
  createdAt DateTime @default(now())

  @@index([uploadId])
  @@map("data_rows")
}

model CleaningJob {
  id                String                @id @default(uuid())
  projectId         String
  project           Project               @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadId          String
  upload            Upload                @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  status            String                @default("running") // running, completed, failed
  config            Json                  // Cleaning configuration
  stats             Json?                 // Pipeline statistics
  cleanedTableName  String?               // Reference to cleaned data
  error             String?               @db.Text
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  completedAt       DateTime?
  cleaningLogs      CleaningLog[]

  @@index([projectId])
  @@index([uploadId])
  @@map("cleaning_jobs")
}

model CleaningLog {
  id          String       @id @default(uuid())
  jobId       String
  job         CleaningJob  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  uploadId    String
  operation   String       // imputation, outlier_detection, deduplication, standardization
  beforeStats Json
  afterStats  Json
  config      Json
  duration    Int          // Duration in milliseconds
  status      String       // success, error
  error       String?      @db.Text
  createdAt   DateTime     @default(now())

  @@index([jobId])
  @@index([uploadId])
  @@map("cleaning_logs")
}

model CleanedData {
  id        String   @id @default(uuid())
  tableName String   @unique
  data      Json     // Array of cleaned rows
  rowCount  Int
  columns   Json     // Array of column names
  createdAt DateTime @default(now())

  @@map("cleaned_data")
}

model DomainDetectionJob {
  id              String              @id @default(uuid())
  projectId       String
  project         Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cleaningJobIds  Json                // Array of cleaning job IDs analyzed together
  detectedDomain  String              // retail, ecommerce, saas, healthcare, manufacturing, logistics, financial, education
  confidence      Float               // 0-100
  decision        String              // auto_detect, show_top_3, manual_select, user_selected
  primaryMatches  Json                // Array of matched primary columns
  keywordMatches  Json                // Array of matched keywords
  allScores       Json                // Scores for all domains
  status          String              @default("pending") // pending, completed, confirmed
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  kpiJobs         KpiExtractionJob[]

  @@index([projectId])
  @@map("domain_detection_jobs")
}

model KpiExtractionJob {
  id                    String         @id @default(uuid())
  projectId             String
  project               Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  domainJobId           String
  domainJob             DomainDetectionJob @relation(fields: [domainJobId], references: [id], onDelete: Cascade)
  cleaningJobIds        Json           // Array of cleaning job IDs used for KPI extraction
  domain                String         // retail, ecommerce, saas, etc.
  totalKpisInLibrary    Int            // Total KPIs in library for domain
  feasibleCount         Int            // KPIs that can be calculated
  infeasibleCount       Int            // KPIs that cannot be calculated
  completenessAverage   Float          // Average completeness score
  top10Kpis             Json           // Top 10 ranked KPIs
  allFeasibleKpis       Json           // All feasible KPIs with scores
  unresolvedColumns     Json           // Columns that couldn't be mapped
  canonicalMapping      Json           // Mapping of canonical names to actual columns
  status                String         @default("pending") // pending, completed, confirmed
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  selectedKpis          SelectedKpi[]

  @@index([projectId])
  @@index([domainJobId])
  @@map("kpi_extraction_jobs")
}

model SelectedKpi {
  id                String            @id @default(uuid())
  kpiJobId          String
  kpiJob            KpiExtractionJob  @relation(fields: [kpiJobId], references: [id], onDelete: Cascade)
  kpiId             String            // retail_revenue_001, etc.
  name              String            // Total Revenue
  formula           String            // SUM(order_value)
  requiredColumns   Json              // Array of required column names
  mappedColumns     Json              // Mapping of canonical to actual columns
  priority          Int               // 1-5
  category          String            // Financial, Sales, etc.
  createdAt         DateTime          @default(now())

  @@index([kpiJobId])
  @@map("selected_kpis")
}

model Dashboard {
  id          String   @id @default(uuid())
  projectId   String
  title       String
  description String?  @db.Text
  config      Json     // Stores KPIs, charts, metadata
  status      String   @default("active") // active, archived
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@map("dashboards")
}

model Relationship {
  id               String   @id @default(uuid())
  projectId        String
  sourceTable      String
  sourceColumn     String
  targetTable      String
  targetColumn     String
  relationshipType String   @default("one-to-many") // one-to-one, one-to-many, many-to-many
  matchRate        Float    // 0.0 to 1.0
  status           String   @default("active") // active, inactive
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([projectId])
  @@map("relationships")
}

model UnifiedView {
  id          String   @id @default(uuid())
  projectId   String
  name        String
  description String?  @db.Text
  viewQuery   String   @db.Text // SQL query to create the view
  status      String   @default("active") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@map("unified_views")
}


